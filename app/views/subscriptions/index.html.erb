<div class="total-wrapper">
  
   <p id="notice"><%= notice %></p>

     

   
   <div class="dashboard-wrapper">
      <div class="page-header"> Dashboard <br> 
       </div>

      <div class="title-bar"> 
         <div class="left-title"> Your Subscriptions </div>
         <div class="right-title"> Console </div>
       </div>

      <div class="sub-wrapper">
        <% @subscriptions.each do |s| %>
          <div class="subscription">
              <div class="sub-details"> 
                  <img src="<%= s.product.image.url %>">
                  <h3><%= s.product.name %></h3>
                  <p class="price"> $ <%= s.price %>0 every <%= s.month_interval %> month(s) </p>
                  <span><%= s.product.category %></span>

                  <img class="edit_image" src="edit.svg">
              </div>
         </div>     
        <% end %>
      </div>

      <div class="console">
                
      <div class="spending-breakdown">
          <h1> Spending Breakdown 
          </h1>
        <div class="break-num"> 
          <p> This Month </p>
            <p> $ <%= current_user.subscriptions.sum(:price)
%>  </p>
        </div>
        <div class="break-num">
          <p> Year to date </p>
            <p> $ <%= current_user.subscriptions.sum(:price)
%> </p>
        </div>    
        <div class="pie-chart">
          <%= pie_chart current_user.subscriptions.joins(:product).group("products.category").count
%>        </div>  

        </div>
      </div>

      </div> 

     
      
   </div>
</div>